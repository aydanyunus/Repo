@using WebApplication1.Models;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Customers</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Firstname
                    </th>
                    <th>
                        Lastname
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Details
                    </th>
                </tr>

            </thead>
            <tbody>
                @foreach (Customer cus in ViewBag.AllCustomers)
                {
                    <tr>
                        <td>@cus.Firstname</td>
                        <td>@cus.Lastname</td>
                        <td>@cus.Email</td>
                        <td>
                            <a href="@Url.Action("Details", new { id = cus.id})">
                                Info
                                <i class="fa fa-eye">
                                </i>
                            </a>
                            |
                            <a href="@Url.Action("Edit", new { id = cus.id})">
                                Edit
                                <i class="fa fa-pencil">
                                </i>
                            </a>
                            |
                            <a href="@Url.Action("Delete", new { id = cus.id})">
                                Delete
                                <i class="fa fa-close">
                                </i>
                            </a>
                        </td>
                        
                    </tr>

                }

            </tbody>

        </table>

    </div>


</div>

<button type="button" class="btn btn-default">
    <a href="@Url.Action("AddCustomer")">Add Customer</a>
</button>

