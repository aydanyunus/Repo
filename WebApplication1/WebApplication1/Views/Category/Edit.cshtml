@using WebApplication1.Models;

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Category activeCategory = ViewBag.activeCategory;
}

<h2>Edit</h2>
@if (activeCategory != null)
{
    if (ViewBag.error != null)
    {
        <div class="alert-danger alert">
            <h2>@ViewBag.error</h2>
        </div>

    }
    <div class="row">
        <div class="col-md-12">
            <form method="post">
                <div class="form-group">
                    <label for="name">Category Name</label>
                    <input class="form-control" type="text" name="CategoryName" id="name" placeholder="Category Name" value="@activeCategory.Name" />
                </div>

                <div class="form-group">
                    <input type="submit" name="Submit" />
                </div>

            </form>
        </div>
    </div>
}
else
{
    <div class="alert-danger alert">
        <h2>@ViewBag.error</h2>
    </div>
}


