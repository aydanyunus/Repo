@using WebApplication1.Models;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Categories</h2>

<div class="row">
    <div class="col-md-8">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>                    
                    <th>
                        Details
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category ct in ViewBag.AllCategories)
                {
                    <tr>
                        <td>@ct.Name</td>                        
                        <td>                          
                            <a href="@Url.Action("Edit", new { id = ct.id})">
                                Edit
                                <i class="fa fa-pencil">
                                </i>
                            </a>
                            |
                            <a href="@Url.Action("Delete", new { id = ct.id})">
                                Delete
                                <i class="fa fa-close">
                                </i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<button type="button" class="btn btn-default">
    <a href="@Url.Action("AddCategory")">Add Category</a>
</button>

