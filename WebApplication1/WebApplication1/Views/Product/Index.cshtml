@using WebApplication1.Models;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Product's List</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped">
            <thead>
               <tr>
                   <th>
                       Name
                   </th>
                   <th>
                       Price
                   </th>
                   <th>
                       Category
                   </th>
                   <th>
                       Details
                   </th>
               </tr>
            </thead>
            <tbody>
                @foreach(Product pro in ViewBag.AllProducts)
                {
                    <tr>
                        <td>@pro.Name</td>
                        <td>@pro.Price</td>
                        <td>@pro.Category.Name</td>
                        <td>
                            
                            <a href="@Url.Action("Edit", new { id = pro.id})">
                                Edit
                                <i class="fa fa-pencil">
                                </i>
                            </a>
                            |
                            <a href="@Url.Action("Delete", new { id = pro.id})">
                                Delete
                                <i class="fa fa-close">
                                </i>
                            </a>
                        </td>


                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<button type="button" class="btn btn-default">
    <a href="@Url.Action("AddProduct")">Add Product</a>
</button>